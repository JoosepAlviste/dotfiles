#!/bin/bash

### BREW + FZF
# update multiple packages at once
# mnemonic [B]rew [I]nstall [P]ackage

function bip()
{
  local inst=$(brew search | eval "fzf ${FZF_DEFAULT_OPTS} -m --header='[brew:install]'")

  if [[ $inst ]]; then
    for prog in $(echo $inst)
    do brew install $prog
    done
  fi
}

bip

